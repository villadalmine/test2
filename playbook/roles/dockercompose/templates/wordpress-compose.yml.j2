version: '3.1'

volumes:
    mysql_data: {}
    wordpress_data: {}


services:

  wordpress:
    image: wordpress
    volumes:
      - wordpress_data:/var/www/html
    restart: always
    ports:
      - 80:80
    environment:
      WORDPRESS_DB_HOST: mysql:3306
      WORDPRESS_DB_PASSWORD: {{wordpresdbpassword}}


  mysql:
    image: mysql:5.7
    volumes:
      - mysql_data:/var/lib/mysql
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: {{mysqlrootpassword}}
